<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fragment_background"
    tools:context=".settings.SettingsFragment">

    <TableLayout
        android:id="@+id/simpleTableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        android:padding="@dimen/spacing_standard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TableRow
            android:id="@+id/tr_sys_theme"
            android:layout_marginBottom="@dimen/spacing_standard">
            <TextView
                android:text="@string/system_theme"
                android:textSize="@dimen/national_dex_text_size"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sw_sys_theme" />
        </TableRow>
        <TableRow
            android:id="@+id/tr_dark_theme"
            android:layout_marginBottom="@dimen/spacing_standard">
            <TextView
                android:id="@+id/tv_dark_theme"
                android:text="@string/dark_theme"
                android:textSize="@dimen/national_dex_text_size"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sw_dark_theme" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>