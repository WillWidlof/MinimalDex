<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_pokemon_type_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_standard"
        android:paddingStart="@dimen/spacing_standard"
        android:paddingTop="@dimen/spacing_small"
        android:paddingEnd="@dimen/spacing_standard"
        android:paddingBottom="@dimen/spacing_small"
        android:textAlignment="center"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_pokemon_type_two"
        app:layout_constraintWidth_max="@dimen/type_width"
        tools:text="FIRE" />

    <TextView
        android:id="@+id/tv_pokemon_type_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_standard"
        android:paddingStart="@dimen/spacing_standard"
        android:paddingTop="@dimen/spacing_small"
        android:paddingEnd="@dimen/spacing_standard"
        android:paddingBottom="@dimen/spacing_small"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_pokemon_type_one"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/type_width"
        tools:text="WATER"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>